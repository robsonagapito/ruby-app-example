<h1 id="titulo">Processos</h1>

<% if notice.to_s != '' %>
  <div class="ls-alert-success">
    <p id="notice"><%= notice %></p>
  </div>
<% end %>
<br>

<table class="ls-table">
  <thead>
    <tr>
      <th>Vara</th>
      <th class="hidden-xs">Numero processo</th>
      <th>Natureza</th>
      <th class="hidden-xs">Partes</th>
      <th>Assistente social</th>
      <th class="hidden-xs">Data entrada</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @processos.each do |processo| %>
      <tr>
        <td id="vara_<%= processo.id %>"><%= processo.vara %></td>
        <td class="hidden-xs"  id="numero_<%= processo.id %>"><%= processo.numero_processo %></td>
        <td id="natureza_<%= processo.id %>"><%= processo.natureza %></td>
        <td class="hidden-xs" id="partes_<%= processo.id %>"><%= processo.partes %></td>
        <td id="as_<%= processo.id %>"><%= processo.assistente_social %></td>
        <td class="hidden-xs" id="data-ent_<%= processo.id %>"><%= processo.data_entrada %></td>
        <td id="status_<%= processo.id %>"><%= processo.status %></td>
        <td id="btn-show_<%= processo.id %>"><%= link_to 'Mostrar', processo, class: "ls-btn-primary" %></td>
        <td class="hidden-xs" id="btn-edit_<%= processo.id %>"><%= link_to 'Editar', edit_processo_path(processo), class: "ls-btn" %></td>
        <td id="btn-delete_<%= processo.id %>"><%= link_to 'Apagar', processo, method: :delete, data: { confirm: 'Deseja deletar o processo?' }, class: "ls-btn-primary-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Processo', new_processo_path, class: "ls-btn-dark", id:"btn-novo" %>
