<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table class="ls-table">
  <thead>
    <tr>
      <th>ID</th>
      <th class="hidden-xs">Login</th>
      <th>Full name</th>
      <th class="hidden-xs">Email</th>
      <th>Age</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td class="hidden-xs"><%= user.login %></td>
        <td><%= user.full_name %></td>
        <td class="hidden-xs"><%= user.email %></td>
        <td><%= user.age %></td>
        <td><%= link_to 'Mostrar', user, class: "ls-btn-primary" %></td>
        <td><%= link_to 'Editar', edit_user_path(user), class: "ls-btn"  %></td>
        <td><%= link_to 'Apagar', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "ls-btn-primary-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

